<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>In-Browser Torrent Streamer</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load WebTorrent library -->
    <script src="https://cdn.jsdelivr.net/npm/webtorrent@1.1.0/webtorrent.min.js"></script>
    <style>
        /* Custom styles for the video player and card */
        #status-log {
            min-height: 80px;
        }
        #player {
            background-color: #000;
            max-height: 50vh;
            width: 100%;
            border-radius: 0.5rem;
        }
        .container {
            max-width: 600px;
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen p-4 font-sans flex justify-center items-start">

    <div class="container w-full">
        <header class="text-center mb-6">
            <h1 class="text-3xl font-bold text-indigo-700">WebTorrent Streamer</h1>
            <p class="text-gray-500">Stream torrents directly in your browser using P2P technology.</p>
        </header>

        <main class="bg-white p-6 shadow-xl rounded-xl">
            <!-- Input Area -->
            <div class="space-y-4 mb-6">
                <!-- Magnet Link Input -->
                <div class="flex flex-col space-y-2">
                    <label for="magnet-link" class="text-sm font-medium text-gray-700">Paste Magnet Link:</label>
                    <input type="text" id="magnet-link" placeholder="magnet:?xt=urn:btih:..."
                           class="w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 transition duration-150">
                    <button id="stream-magnet" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-4 rounded-lg shadow-md transition duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Stream Magnet Link
                    </button>
                </div>

                <div class="flex items-center">
                    <div class="flex-grow border-t border-gray-300"></div>
                    <span class="flex-shrink mx-4 text-gray-400 text-sm">OR</span>
                    <div class="flex-grow border-t border-gray-300"></div>
                </div>

                <!-- Torrent File Upload -->
                <div class="flex flex-col space-y-2">
                    <label for="torrent-file" class="text-sm font-medium text-gray-700">Upload .torrent File:</label>
                    <input type="file" id="torrent-file" accept=".torrent"
                           class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 transition duration-150">
                    <button id="stream-file" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-4 rounded-lg shadow-md transition duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                        Stream Torrent File
                    </button>
                </div>
            </div>

            <!-- Video Player -->
            <div id="video-container" class="mb-6 relative w-full aspect-video">
                <video id="player" controls autoplay poster="https://placehold.co/600x337/818CF8/FFFFFF?text=Streaming+Content+Here"></video>
                <div id="message-box" class="absolute inset-0 bg-black bg-opacity-70 flex items-center justify-center p-4 rounded-xl hidden">
                    <p class="text-white text-lg font-medium text-center"></p>
                </div>
            </div>

            <!-- Status and Metrics -->
            <div class="text-sm space-y-2">
                <h3 class="text-lg font-semibold text-gray-700 border-b pb-1 mb-2">Status</h3>
                <p id="status-log" class="text-gray-600 text-xs italic">Awaiting input...</p>
                <div class="flex justify-between items-center pt-2 border-t mt-2">
                    <div class="text-gray-500">
                        <span class="font-medium">Download:</span> <span id="download-speed">0.00 KB/s</span>
                    </div>
                    <div class="text-gray-500">
                        <span class="font-medium">Peers:</span> <span id="peer-count">0</span>
                    </div>
                    <div class="text-gray-500">
                        <span class="font-medium">Progress:</span> <span id="progress-percent">0%</span>
                    </div>
                </div>
            </div>

        </main>
    </div>

    <script type="module">
        // Standard Firebase initialization boilerplate (required by environment)
        // Although this app is client-side P2P streaming and doesn't use Firestore/Auth,
        // we include the setup as per the environment mandate.
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        if (firebaseConfig) {
            // Log for compliance, but no actual Firebase services are used for torrenting
            console.log(`App ID: ${appId}. Firebase Config available.`);
        }
        // End of Firebase boilerplate

        const client = new WebTorrent();

        // UI Element references
        const magnetInput = document.getElementById('magnet-link');
        const fileInput = document.getElementById('torrent-file');
        const streamMagnetButton = document.getElementById('stream-magnet');
        const streamFileButton = document.getElementById('stream-file');
        const statusLog = document.getElementById('status-log');
        const downloadSpeed = document.getElementById('download-speed');
        const peerCount = document.getElementById('peer-count');
        const progressPercent = document.getElementById('progress-percent');
        const player = document.getElementById('player');
        const messageBox = document.getElementById('message-box');
        const messageBoxText = messageBox.querySelector('p');

        let currentTorrent = null;
        let isStreaming = false;

        /**
         * Shows a message in the video player overlay instead of using alert().
         * @param {string} message The message to display.
         * @param {number} durationMs How long to show the message (0 for persistent).
         */
        function showMessage(message, durationMs = 3000) {
            messageBoxText.textContent = message;
            messageBox.classList.remove('hidden');

            if (durationMs > 0) {
                setTimeout(() => {
                    messageBox.classList.add('hidden');
                }, durationMs);
            }
        }

        /**
         * Clears the current streaming state and updates the UI.
         */
        function resetStream() {
            if (currentTorrent) {
                currentTorrent.destroy();
                currentTorrent = null;
            }
            isStreaming = false;
            player.removeAttribute('src');
            player.load();
            statusLog.textContent = 'Awaiting input...';
            downloadSpeed.textContent = '0.00 KB/s';
            peerCount.textContent = '0';
            progressPercent.textContent = '0%';
            showMessage('Stream stopped.', 1500);
        }

        /**
         * Updates the streaming metrics in the UI.
         */
        function updateMetrics() {
            if (!currentTorrent) return;

            // Round progress to 2 decimal places
            const progress = (currentTorrent.progress * 100).toFixed(2);
            progressPercent.textContent = `${progress}%`;

            // Display speed in KB/s
            const speedKb = (currentTorrent.downloadSpeed / 1024).toFixed(2);
            downloadSpeed.textContent = `${speedKb} KB/s`;

            peerCount.textContent = currentTorrent.numPeers;
        }

        /**
         * Handles the streaming logic once a magnet link or torrent file is added.
         * @param {object} torrent The WebTorrent torrent object.
         */
        function onTorrent(torrent) {
            currentTorrent = torrent;
            isStreaming = true;
            statusLog.textContent = `Torrent loaded: ${torrent.name}. Finding largest file for playback...`;
            showMessage(`Found torrent: ${torrent.name}. Starting download.`, 4000);

            // Find the largest file in the torrent (usually the main video)
            let file = torrent.files.find(f => f.name.endsWith('.mp4') || f.name.endsWith('.mkv') || f.name.endsWith('.webm'));
            
            if (!file) {
                // If no typical video extension is found, fall back to the largest file
                file = torrent.files.reduce((a, b) => (a.length > b.length ? a : b));
            }
            
            if (!file) {
                 statusLog.textContent = 'Error: No files found in the torrent.';
                 showMessage('Error: No files found in the torrent.', 5000);
                 return;
            }

            statusLog.textContent = `Streaming file: ${file.name}. Waiting for peers...`;

            // Stream the file to the HTML5 video player
            // WebTorrent handles the downloading/streaming directly to the video element
            file.renderTo(player, (err) => {
                if (err) {
                    statusLog.textContent = `Error rendering file: ${err.message}`;
                    showMessage(`Render Error: ${err.message}`, 5000);
                    return;
                }
                player.play(); // Start playback immediately
                statusLog.textContent = `Playback started for ${file.name}.`;
            });

            // Update metrics every 1 second
            torrent.on('wire', () => {
                statusLog.textContent = `Peers connected. Streaming...`;
            });
            torrent.on('done', () => {
                statusLog.textContent = `Download finished! File fully buffered.`;
                showMessage('Download complete!', 3000);
            });
            setInterval(updateMetrics, 1000);
        }

        // --- Event Listeners ---

        client.on('error', (err) => {
            console.error('WebTorrent Error:', err.message);
            statusLog.textContent = `WebTorrent Client Error: ${err.message}. Try reloading or using a different link.`;
            showMessage(`Fatal Error: ${err.message}`, 5000);
            resetStream();
        });

        // 1. Stream Magnet Link Button Handler
        streamMagnetButton.addEventListener('click', () => {
            if (isStreaming) resetStream();

            const magnetURI = magnetInput.value.trim();
            if (!magnetURI) {
                showMessage('Please enter a valid magnet link.', 2000);
                return;
            }

            statusLog.textContent = 'Starting stream from magnet link...';
            client.add(magnetURI, onTorrent);
        });

        // 2. Stream Torrent File Button Handler
        streamFileButton.addEventListener('click', () => {
            if (isStreaming) resetStream();

            const files = fileInput.files;
            if (files.length === 0) {
                showMessage('Please select a .torrent file to upload.', 2000);
                return;
            }

            statusLog.textContent = 'Starting stream from torrent file...';
            client.add(files[0], onTorrent);
        });

        // 3. Optional: Allow users to stop/reset the stream
        player.addEventListener('loadeddata', () => {
            // Hide the initial message box if playback starts
            messageBox.classList.add('hidden');
        });

        // Setup initial status
        document.addEventListener('DOMContentLoaded', () => {
            statusLog.textContent = 'WebTorrent client initialized. Ready to stream.';
        });

    </script>
</body>
</html>

